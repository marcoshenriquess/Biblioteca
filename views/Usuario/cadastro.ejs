<div class="cx-form shadow-none p-3 mb-5 bg-light rounded">
    <div class="cx-tilt-form">
        <span>
            <p>Cadastrar Usuário</p>
        </span>
    </div>
    <form class="cadastro-usu shadow-lg p-3 mb-5 bg-white rounded">
        <div class="cx-inpt-form">
            <div class="label-inpt">
                <label for="LaNome">Nome:</label>
                <input class="form-control tam-inpt" type="text" id="inptNome" name="inptNome"
                    placeholder="Informe o nome">
            </div>
            <div class="label-inpt">
                <label for="LaEmail">E-mail:</label>
                <input class="form-control tam-inpt" type="email" id="inptEmail" name="inptEmail"
                    placeholder="Informe o email">
            </div>
        </div>
        <div class="cx-inpt-form">
            <div class="label-inpt">
                <label for="LaCpf">CPF:</label>
                <input class="form-control tam-inpt" type="text" id="inptCpf" name="inptCpf"
                    placeholder="Informe o CPF">
            </div>
            <div class="label-inpt">
                <label for="LaDtNasc">Data de Nascimento:</label>
                <input class="form-control tam-inpt" type="text" id="inptDtNasc" name="inptDtNasc"
                    placeholder="Informe a data de nascimento">
            </div>
        </div>
        <div class="cx-inpt-form">
            <div class="label-inpt" style="width: 100%;">
                <label for="TipoUser">O usuario é:</label>
                <select class="tipo-usu form-select">
                    <option value="0">Aluno</option>
                    <option value="1">Funcionario</option>
                </select>
            </div>
        </div>
        <div class="cx-inpt-form cx-bt" style="display: flex; justify-content: end; margin: 10px;">
            <button type="submit" class="btn btn-primary btn-cad">Cadastrar</button>
            <button type="submit" class="btn btn-primary btn-can">Cancelar</button>
        </div>
    </form>
</div>